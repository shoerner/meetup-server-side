{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [
            true,
            "tabs"
        ],
        "interface-name": false,
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
            },
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ]
    },
    "rulesDirectory": []
}